<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Луч на сфере. -->
    <!-- Не используется в текущей библиотеке (применяется для использования другими библиотеками) -->

    <embeddable name="Maris\Symfony\Geo\Entity\Beam" >

        <many-to-one field="location">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-columns>
                <join-column name="location_id"/>
            </join-columns>
        </many-to-one>

        <field name="bearing" type="decimal" precision="8" scale="6" />
    </embeddable>

</doctrine-mapping>