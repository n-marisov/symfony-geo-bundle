<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует собой фигуру на карте -->
    <entity name="Maris\Symfony\Geo\Entity\Geometry" table="geometries" inheritance-type="SINGLE_TABLE" >
        
        <discriminator-column name="view" />
        <discriminator-map>
            <discriminator-mapping value="LINE_STRING" class="Maris\Symfony\Geo\Entity\Polyline"/>
            <discriminator-mapping value="POLYGON" class="Maris\Symfony\Geo\Entity\Polygon"/>
        </discriminator-map>

        <!-- ID записи в базе -->
        <id name="id" type="integer" column="id" >
            <generator/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <!-- Границы геометрической фигуры -->
        <embedded name="bounds" class="Maris\Symfony\Geo\Entity\Bounds" column-prefix="bbox_" />


        <!-- Список точек фигуры -->
        <many-to-many index-by="position" field="coordinates" target-entity="Maris\Symfony\Geo\Entity\Location" inversed-by="geometry">
            <join-table name="geometry_coordinates">
                <join-columns>
                    <join-column name="geometry" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="location" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-all/>
            </cascade>
        </many-to-many>


    </entity>

</doctrine-mapping>